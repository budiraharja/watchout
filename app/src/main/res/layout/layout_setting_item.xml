<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_setting_item_padding" >

    <TextView
        android:id="@+id/tv_setting_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_setting_item_margin_bottom"
        android:textColor="@color/candid_setting_text_color"
        android:textSize="@dimen/layout_text_size" />

    <TextView
        android:id="@+id/tv_setting_item_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/candid_setting_text_color"
        android:textSize="@dimen/layout_text_sub_size" />

</LinearLayout>