<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <View
        android:id="@+id/vw_setting_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_view_zoom_in"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_setting_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="@string/candid_setting"
        android:textColor="@color/candid_text_setting_color"
        android:textSize="@dimen/layout_text_size"
        android:visibility="gone" />

</RelativeLayout>